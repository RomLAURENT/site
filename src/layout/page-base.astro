---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---
<!DOCTYPE html>
<html lang="fr">
<head>
	<meta charset="utf-8" />
	<title>{title}</title>
	<link rel="stylesheet" href="global/global.css"/>
	<link rel="stylesheet" href="global/index.css"/>

	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="keywords" lang="fr" content="Bloquons tout, Indignons-nous, 10 Septembre, 10 Septembre 2025" />
	<meta name="location" content="France, FRANCE" />
	<link rel="icon" href="global/img/favicon.svg" type="image/svg+xml" />
	<link rel="alternate icon" href="favicon.ico" type="image/x-icon" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
	<meta property="og:description" content={description} />
    <meta property="og:image" content="/global/img/logo-inbt.jpg" />
	<meta property="og:type" content="website" />
	<meta name="twitter:card" content="summary_large_image" />
	<meta name="twitter:title" content={title} />
	<meta name="twitter:description" content={description} />
	<meta name="twitter:image" content="/global/img/logo-inbt.jpg" />

    <!-- Matomo -->
    <script>
        var _paq = window._paq = window._paq || [];
        /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
        _paq.push(['trackPageView']);
        _paq.push(['enableLinkTracking']);
        (function() {
            var u="//stat.indignonsnous.be/";
            _paq.push(['setTrackerUrl', u+'matomo.php']);
            _paq.push(['setSiteId', '2']);
            var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
            g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
        })();
    </script>
    <!-- End Matomo Code -->
</head>
<body>
    <header id="banniere">
		<a href="/" title="Accueil"><img id="logo_left" src="/global/img/logo-inbt.svg" /></a>
		<div id="countdown-wrapper">
			<div class="countdown"><h5 id="countdown"> </h5></div>
			<br/>
			<h1 class="font-yellow">10 Septembre 2025</h1>
			<br/>
			<h4 id="ferie" class="background-red">C'est férié !</h4>
		</div>
	</header>
	<div id="menu_top">
		<ul>
			<li class="selected"><a href="/">&#8962;</a></li>
			<!--#include virtual="/cms/?page=menu" onerror="/local/ssi/menu_top.shtml" -->
			<li><a href="/global/sites.html">Sites</a></li>
		</ul>
	</div>
    <main id="center">
        <slot />
    </main>
    <footer />
	<script src="/global/js/countdown.js" is:inline />
</body>
</html>