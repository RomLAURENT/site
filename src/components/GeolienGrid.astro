---
import type { GeolienGridProps } from '../types/geoliens';
import GeolienCard from './GeolienCard.astro';

interface Props extends GeolienGridProps {}

const { geoliens } = Astro.props;
---

<div id="list-view" class="block">
  <div id="geoliens-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {geoliens.map((geolien) => (
      <GeolienCard geolien={geolien} />
    ))}
  </div>
</div>

<!-- Message Aucun Résultat -->
<div id="no-results" class="hidden text-center py-12">
  <div class="text-gray-400 mb-4 flex justify-center">
    <svg class="w-16 h-16" fill="currentColor" viewBox="0 0 256 256">
      <path d="M232.49,215.51,185,168a92.12,92.12,0,1,0-17,17l47.53,47.54a12,12,0,0,0,17-17ZM44,112a68,68,0,1,1,68,68A68.07,68.07,0,0,1,44,112Z"/>
    </svg>
  </div>
  <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun groupe trouvé</h3>
  <p class="text-gray-600">Essayez de modifier vos critères de recherche</p>
</div>